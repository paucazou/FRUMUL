document : header text

header : '___header___' statement_list
statement_list : statement*
statement : empty | constant ':' assignment EOL # changer : toutes les constantes déclarées doivent être dans une hiérarchie de statement
assignment : [language] definition
definition : (file_assignment | [mark] value [statement_list]) (EOL|EOL)

language : 'lang' value
mark : 'mark' value
file_assignment : 'file' value

value : '"' VALUE '"' 

definition_value : (shortname ['(' longname ')'])+
file_value : assignment statement_list
mark_value : [0-9]+

placeholder : '{}'
echap_char : '\'

end_of_line : 'EOL'
end_of_file : 'EOF'
comment : // end_of_line

text : '___text___' content
